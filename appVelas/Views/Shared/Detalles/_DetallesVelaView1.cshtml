@model IEnumerable<appVelas.Models.Vela>

@{
    // List<Vela> velas = ViewData["VELAS"] as List<Vela>;
    string IDCera = ViewData["IDCera"] as string;

    Molde molde=  ViewData["Moldes"]  as Molde;
