                    @Html.DisplayFor(modelItem => item.Coste)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endurecedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradFrag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradPig)
                </td>
                <td>
                    @pig.ColorNombre
                </td>
                <td>
                    @frag.FragNombre;
                </td>
                <td>
                    @molde.MoldeNombre;
                </td>

                <td>
                    @pedi.FechaPedi
                </td>
                <td>
                    @pedi.FechaEntrega
                </td>
                <td>@clien</td>
                <td>
                    @mecha.Tipo
                </td>
                <td>
                    @cera.Tipo
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observ)
                </td>

                <td>
                    @Html.ActionLink("Actualizar", "_ActVelaView", new { IDVela = item.IDVela })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
