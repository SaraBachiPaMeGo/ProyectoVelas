    Pigmento pig  = ViewData["Pig"]  as Pigmento;
    Cera  cera = ViewData["Cera"]  as  Cera;
    Mecha mecha  = ViewData["Mecha"]  as Mecha;
    Vela vela = ViewData["VELA"]  as Vela;
    string clien = ViewData["clien"] as string;
    Pedido pedi = ViewData["pedi"]  as Pedido;

}


<div class="col-md-4" style="margin-left: 3%;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VelaNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Coste)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endurecedor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaReal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaVenta)
                </th>
                <th>
                    ºC Fragancia
                </th>

                <th>
                    Fragancia
                </th>
                <th>
                    ºC Pig
                </th>
                <th>
                    Pigmento
                </th>

                <th>
                    Molde
                </th>


                <th>
                    Fecha pedido
                </th>
                <th>
                    Fecha Entrega
                </th>
                <th>Cliente</th>

                <th>
                    Mecha
                </th>
                <th>
                    Cera
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Observ)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                @*<td>
            @Html.DisplayFor(modelItem => item.IDVela)
        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.VelaNombre)
                </td>
